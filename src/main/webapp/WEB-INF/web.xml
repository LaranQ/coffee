<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <servlet>
    <servlet-name>coffeeOrderServlet</servlet-name>
    <servlet-class>com.vkhalec.server.service.CoffeeOrderServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>coffeeOrderServlet</servlet-name>
    <url-pattern>/coffee/coffeeOrder</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>coffeeServlet</servlet-name>
    <servlet-class>com.vkhalec.server.service.CoffeeServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>coffeeServlet</servlet-name>
    <url-pattern>/coffee/coffee</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>coffeeMachineServlet</servlet-name>
    <servlet-class>com.vkhalec.server.service.CoffeeMachineServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>coffeeMachineServlet</servlet-name>
    <url-pattern>/coffee/coffeeMachine</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>coffee.html</welcome-file>
  </welcome-file-list>

</web-app>
